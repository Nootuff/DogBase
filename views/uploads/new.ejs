<br>
    <label for="image">Image</label>
    <!--
    <input type="text" id="image" name="upload[image]" placeholder="img url" required>
    <div class="noInput">Please enter a valid image</div>
-->
    <input type="file" name="image" id="image">
    <br>
    <label for="caption">Caption</label>
    <input type="text" id="caption" name="upload[caption]" placeholder="Caption here">
    <br>
    <input type="submit" value="Submit" onclick="captionOverride()">
</form>

</section>
</main>
