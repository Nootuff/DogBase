<% layout("/boilerplate") %>

<main>
  <section>
<h1>Edit post</h1>
<p>Html form.</p>
<h2><%= upload.title%></h2>
<form action="/uploads/<%= upload._id%>?_method=PUT" method="POST" novalidate enctype="multipart/form-data"> 
     <!--Use multipart/form-data when your form includes any <input type="file"> elements. I think novalidate is something to do with error handling or making sure enough data is input.-->
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= upload.title%>" placeholder="Title here">
    <input type="submit" value="Submit">
</form>
<a href="/uploads/<%= upload._id%>">Back to campground</a>
</section>
</main>
