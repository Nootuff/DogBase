<% layout("/boilerplate") %>
  <ul id="indexList">
    <% for (let i=0; i < uploads.length; i++){ 
      let reFormat = uploads[i].image.url.replace("/upload", "/upload/c_scale,w_1.0");
      %>
      <li class="indexItem">
        <h3><a href="/uploads/<%=uploads[i]._id %>"><%= uploads[i].title%></a></h3>
  <table>
      <tr>
        <td>
     <span class="toggleText">Submitted by</span> <a href="/users/<%=uploads[i].author._id %>"><%= uploads[i].author.displayName%></a>
    </td>
    <td class="toggleText">
      <%= uploads[i].datePosted%>
     </td>
     </tr>
     </table>
     <table>
       <tr>
    <td class ="likes">
     Likes: <%= uploads[i].likes.length-1 %>
          </td>
          <td class ="dislikes">
            Dislikes <%= uploads[i].dislikes.length-1 %>
            </td>
        </tr>
      </table> 
      <div class="imgContainer">     
      <a href="/uploads/<%=uploads[i]._id %>"><img class="mainImg" src="<%= reFormat %>" alt="Index image"></a>
      </div>
      <p><a href="/uploads/<%=uploads[i]._id %>#commentSection">Comments: <%= uploads[i].comments.length %> <i class="far fa-comment-alt"></i></a></p>
            </li>
    <% } %>
  </ul>
